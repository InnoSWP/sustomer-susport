{
  "compilerOptions": {
    "outDir": "./flask_server/static/js",
    "rootDir": "./ts-modules",
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": false,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "module": "ES6",
    "target": "es2015",
    "types": ["jest"],
    "lib": ["dom", "es5", "scripthost", "es2015"]
  },
  "exclude": ["node_modules", "./ts-modules/tests"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
